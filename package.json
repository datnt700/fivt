{
  "name": "financial-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "dev:webapp": "turbo run dev --filter=@fivt/webapp",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:coverage": "turbo run test:coverage",
    "test:e2e": "turbo run test:e2e",
    "test:watch": "turbo run test:watch",
    "clean": "turbo run clean",
    "clean:all": "rimraf node_modules apps/*/node_modules packages/*/node_modules && rimraf **/.turbo",
    "prepare": "husky",
    "create:microapp": "node scripts/create-microapp.js",
    "generate:microapp": "turbo run build --filter=microapp && echo 'Microapp generated successfully'",
    "dev:microapp": "turbo run dev --filter=microapp",
    "build:microapp": "turbo run build --filter=microapp"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
