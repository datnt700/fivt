    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^22.15.3",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1",
    "@vitejs/plugin-react": "^4.3.3",
    "eslint": "^9.34.0",
    "jsdom": "^25.0.1",
    "rimraf": "^6.0.1",
    "typescript": "5.9.2",
    "vitest": "^2.1.5"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
