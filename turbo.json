{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["NODE_ENV", "RESEND_API_KEY", "AUTH_RESEND_FROM", "BRIDGE_CLIENT_ID", "BRIDGE_CLIENT_SECRET"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "test": {
      "dependsOn": ["^test"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "src/**/*.test.*",
        "src/**/*.spec.*",
        "tests/**/*"
      ]
    },
    "test:unit": {
      "dependsOn": ["^test:unit"],
      "inputs": ["$TURBO_DEFAULT$", "src/**/*.test.*", "src/**/*.spec.*"]
    },
    "test:e2e": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "tests/**/*", "playwright.config.*"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["PORT", "BRIDGE_CLIENT_ID", "BRIDGE_CLIENT_SECRET"]
    }
  },
  "globalEnv": [
    "NODE_ENV",
    "NEXTAUTH_URL",
    "AUTH_SECRET",
    "RESEND_API_KEY",
    "AUTH_RESEND_FROM",
    "AUTH_GOOGLE_ID",
    "AUTH_GOOGLE_SECRET",
    "DATABASE_URL"
  ]
}
